# OCI Cost Alert Configuration Example
# このファイルをterraform.tfvarsにコピーして、実際の値を設定してください

# 必須設定項目
compartment_id = "ocid1.compartment.oc1..aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
alert_email    = "your-email@example.com"

# 予算設定
budget_amount              = 100
budget_currency            = "USD"
alert_threshold_percentage = 80
budget_display_name        = "Monthly Budget Alert"

# 通知設定
notification_topic_name = "budget-alert-topic"

# タグ設定
freeform_tags = {
  Environment = "Production"
  Project     = "CostManagement"
  ManagedBy   = "Terraform"
  Terraform   = "true"
}