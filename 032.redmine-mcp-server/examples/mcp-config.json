{
  "mcpServers": {
    "redmine": {
      "command": "python",
      "args": [
        "/absolute/path/to/032.redmine-mcp-server/src/redmine_mcp_server.py"
      ],
      "env": {
        "REDMINE_URL": "https://your-redmine-server.com",
        "SESSION_TIMEOUT": "3600",
        "REQUEST_TIMEOUT": "30",
        "MAX_RETRIES": "3",
        "RETRY_DELAY": "1.0",
        "DEBUG": "false"
      }
    }
  }
}